{% extends "AppBundle::layout.html.twig" %}
{% block body%}
<div class="container-fluid">
    <div class="row">
       <div class="col-sm-offset-2 col-md-8">
            <div class="card">
                <div class="card-header card-header-icon" data-background-color="rose">
                    <i class="material-icons">wallpaper</i>
                </div>
                <div class="card-content">
                    <h4 class="card-title">Set Wall of day</h4>
                    {{form_start(form)}}

                        <label class="control-label">Notification Title</label>
                        <div class="form-group label-floating">
                            {{form_widget(form.title,{value: app.request.query.get("title"),"attr":{"class":"form-control","data-emojiable":"true","data-emoji-input":"unicode"}})}}
                            <span class="validate-input">{{form_errors(form.title)}}</span>
                        </div>
                        <div class="form-group label-floating ">
                            <label class="control-label">type</label>
                            {{form_widget(form.type,{"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.type)}}</span>
                        </div>
                        <div class="form-group label-floating ">
                            <label class="control-label">Wallpaper</label>
                            {{form_widget(form.wallpaper,{value: app.request.query.get("id"),"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.wallpaper)}}</span>
                        </div>
                        <div class="form-group label-floating " style="display:none">
                            <label class="control-label">Categories</label>
                            {{form_widget(form.category,{"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.category)}}</span>
                        </div>
                        <div class="form-group label-floating " style="display:none">
                            <label class="control-label">Url to lunch</label>
                            {{form_widget(form.url,{"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.url)}}</span>
                        </div>
                        <span class="pull-right">{{form_widget(form.save,{attr:{"class":"btn btn-fill btn-rose"}})}}</span>

                    {{form_end(form)}}
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock%}