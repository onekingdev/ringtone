{% extends "AppBundle::layout.html.twig" %}
{% block body%}
<div class="container-fluid">
    <div class="row">
       <div class="col-sm-offset-2 col-md-8">
            <div class="card">
                <div class="card-header card-header-icon" data-background-color="rose">
                    <i class="material-icons">view_list</i>
                </div>
                <div class="card-content">
                    <h4 class="card-title">New sub-category</h4>
                    {{form_start(form)}}
                    <form method="#" action="#">
                        <div class="form-group label-floating is-empty">
                            <label class="control-label">Sub-category title</label>
                            {{form_widget(form.title,{"attr":{"class":"form-control"}})}}
                            <span class="validate-input">{{form_errors(form.title)}}</span>
                        </div>
                        <div class="form-group label-floating">
                            <label class="control-label">Category</label>
                            {{form_widget(form.section,{value: app.request.query.get("section"),"attr":{"class":"form-control"  }})}}
                            <span class="validate-input">{{form_errors(form.section)}}</span>
                        </div>
                        <div class="fileinput fileinput-new text-center" style="    width: 100%;" data-provides="fileinput">
                            <div class="fileinput-new thumbnail" style="    width: 100%;">
                                <img  id="img-preview" src="{{asset("img/image_placeholder.jpg")|imagine_filter('album_thumb')}}"  width="100%">
                            </div>
                           {{form_widget(form.file,{"attr":{"class":"file-hidden input-file img-selector","style":"    display: none;"}})}}
                            <div class="fileinput-preview thumbnail"></div>
                            <div>
                                <a href="#" class="btn btn-rose btn-round btn-select"><i class="material-icons">image</i> Select image </a>
                            </div>
                            <span class="validate-input">{{form_errors(form.file)}}</span>
                       </div>
                        {% if app.request.query.get("section") != null %}
                        <span class="pull-right"><a href="{{path("app_section_view",{id:app.request.query.get("section")})}}" class="btn btn-fill btn-yellow"><i class="material-icons">arrow_back</i> Cancel</a>{{form_widget(form.save,{attr:{"class":"btn btn-fill btn-rose"}})}}</span>
                        {% else %}
                        <span class="pull-right"><a href="{{path("app_section_index")}}" class="btn btn-fill btn-yellow"><i class="material-icons">arrow_back</i> Cancel</a>{{form_widget(form.save,{attr:{"class":"btn btn-fill btn-rose"}})}}</span>
                        {% endif %}
                    {{form_end(form)}}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock%}