{% extends "AppBundle::layout.html.twig" %}
{% block body%}
<div class="container-fluid">
    <div class="row">
		<div class="col-md-12">

		<div class="row">
			<div class="col-md-4">
				<a href="{{path("app_category_index")}}" class="btn  btn-lg btn-warning col-md-12"><i class="material-icons" style="font-size: 30px;">refresh</i> Refresh</a>
			</div>
			<div class="col-md-4">
				<a class="btn btn btn-lg btn-yellow col-md-12"><i class="material-icons" style="font-size: 30px;">queue_music</i> {{categories|length}} categories</a>
			</div>
			<div class="col-md-4">
				<a href="{{path("app_category_add")}}" class="btn btn-rose btn-lg pull-right add-button col-md-12" title=""><i class="material-icons" style="font-size: 30px;">add_box</i> NEW CATEGORY </a>
			</div>
		</div>
			<div class="card">
			    <div class="card-content">
			        <div class="table-responsive">
			            <table class="table" width="100%">
			                <thead class="text-primary">
			                    <th>ID</th>
			                    <th>Category title</th>
			                    <th>Status</th>
			                    <th width="300px">Action</th>
			                </tr></thead>
			                <tbody>
			                {% for category in categories %}
			                    <tr>
			                        <td>{{category.id}}</td>
			                        <td>{{category.title}}</td>
			                        <td>
			                        {% if category.enabled %}
			                            <span class="label label-success">Enabled</span>

			                        {% else %}
			                            <span class="label label-danger">Disabled</span>

			                        {% endif %}
			                        </td>
			                        <td>
		                                <a href="{{path("app_category_edit",{"id":category.id})}}" rel="tooltip" data-placement="left" class=" btn btn-primary btn-xs btn-round" data-original-title="Edit">
		                                    <i class="material-icons">edit</i>
		                                </a>
		                                <a href="{{path("app_category_delete",{"id":category.id})}}" rel="tooltip" data-placement="left" class=" btn btn-danger btn-xs btn-round" data-original-title="Delete">
		                                    <i class="material-icons">delete</i>
		                                </a>
		                               <a href="{{path("app_category_up",{"id":category.id})}}" rel="tooltip" data-placement="left" class=" btn btn-info btn-xs btn-round" data-original-title="Up">
		                                  <i class="material-icons">keyboard_arrow_up</i>
		                                </a>
		                                <a href="{{path("app_category_down",{"id":category.id})}}" rel="tooltip" data-placement="left" class=" btn btn-info btn-xs btn-round" data-original-title="Down">
											<i class="material-icons">keyboard_arrow_down</i>
		                                </a>
			                        </td>
			                    </tr>
			                    {% else %}
						          <tr>
							          <td colspan="4">
								          <br>
								          <br>
								          <center><img src="{{asset("img/bg_empty.png")}}"  style="width: auto !important;" =""></center>
							              <br>
							              <br>
							          </td>
						          </tr>	
								{% endfor %}
			                </tbody>
			            </table>

			        </div>
	    		</div>

	    	</div>
	    </div>
	</div>
                            
{% endblock%}
