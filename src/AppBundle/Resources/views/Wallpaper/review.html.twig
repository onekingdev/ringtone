{% extends "AppBundle::layout.html.twig" %}
{% block body%}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-offset-1 col-md-10">
                <div class="card">
                    <div class="card-header card-header-icon" data-background-color="rose">
                        <i class="material-icons">Wallpaper</i>
                    </div>
                    <div class="card-content">
                        <h4 class="card-title">Review Wallpaper</h4>
                        {{form_start(form)}}
                        <form method="#" action="#">
                            <div class="form-group label-floating ">
                                <label class="control-label">Wallpaper title</label>
                                {{form_widget(form.title,{"attr":{"class":"form-control"}})}}
                                <span class="validate-input">{{form_errors(form.title)}}</span>
                            </div>
                            <div class="form-group label-floating ">
                                <label class="control-label">wallpaper tags (Ex:anim,art,hero)</label>
                                <br>
                                {{form_widget(form.tags,{"attr":{"class":"input-tags"}})}}
                                <span class="validate-input">{{form_errors(form.tags)}}</span>
                            </div>
                            <script>
                            $('.input-tags').selectize({
                              persist: false,
                              createOnBlur: true,
                              create: true
                            });
                            </script>
                            <div class="form-group label-floating ">
                                <label class="control-label">Wallpaper Description</label>
                                {{form_widget(form.description,{"attr":{"class":"form-control","rows":7}})}}
                                <span class="validate-input">{{form_errors(form.description)}}</span>
                            </div>
                            <br>
                            
                            <a target="_blank" href="../../{{form.vars.value.media.link}}" style="margin-left: 30%;">
                                <img src="../../{{form.vars.value.media.link}}" style="width: 400px;">
                            </a>
                            
                            <br>
                            <span class="pull-right"><a href="{{path("app_wallpaper_reviews")}}" class="btn btn-fill btn-yellow"><i class="material-icons">arrow_back</i> Cancel</a>{{form_widget(form.save,{attr:{"class":"btn btn-fill btn-rose"}})}}</span>
                            {{form_end(form)}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock%}