{% extends "AppBundle::layout.html.twig" %}
{% block body%}
<div class="container-fluid">
    <div class="row">
		<div class="col-md-12">

		<div class="row">
			<div class="col-md-4">
				<a href="{{path("app_section_wallpaper_index")}}" class="btn  btn-lg btn-warning col-md-12"><i class="material-icons" style="font-size: 30px;">refresh</i> Refresh</a>
			</div>
			<div class="col-md-4">
				<a class="btn btn btn-lg btn-yellow col-md-12"><i class="material-icons" style="font-size: 30px;">image</i> {{sections|length}} sections</a>
			</div>
			<div class="col-md-4">
				<a href="{{path("app_section_add_wallpaper")}}" class="btn btn-rose btn-lg pull-right add-button col-md-12" title=""><i class="material-icons" style="font-size: 30px;">add_box</i> NEW SECTION </a>
			</div>
		</div>
			<div class="card">
			    <div class="card-content">
			        <div class="table-responsive">
			            <table class="table" width="100%">
			                <thead class="text-primary">
			                    <th width="100px">#</th>
			                    <th width="40px">ID</th>
			                    <th> Title</th>
			                    <th width="300px">Action</th>
			                </tr></thead>
			                <tbody>
			                {% for section in sections %}
			                    <tr>
			                        <td><img src="{{asset(section.media.link)|imagine_filter('section_thumb')}}" style="width:70px; height:70px;    border-radius: 5px;" ></td>
			                        <td>{{section.id}}</td>
			                        <td>{{section.title}}</td>
			                        <td>
		                                <a href="{{path("app_section_edit_wallpaper",{"id":section.id})}}" rel="tooltip" data-placement="left" class=" btn btn-primary btn-xs btn-round" data-original-title="Edit">
		                                    <i class="material-icons">edit</i>
		                                </a>
		                                <a href="{{path("app_section_delete_wallpaper",{"id":section.id})}}" rel="tooltip" data-placement="left" class=" btn btn-danger btn-xs btn-round" data-original-title="Delete">
		                                    <i class="material-icons">delete</i>
		                                </a>
		                                <a href="{{path("app_section_view_wallpaper",{"id":section.id})}}" rel="tooltip" data-placement="left" class=" btn btn-success btn-xs btn-round" data-original-title="Sub-categories">
		                                    <i class="material-icons">list</i>
		                                </a>
		                               <a href="{{path("app_section_up_wallpaper",{"id":section.id})}}" rel="tooltip" data-placement="left" class=" btn btn-info btn-xs btn-round" data-original-title="Up">
		                                  <i class="material-icons">keyboard_arrow_up</i>
		                                </a>
		                                <a href="{{path("app_section_down_wallpaper",{"id":section.id})}}" rel="tooltip" data-placement="left" class=" btn btn-info btn-xs btn-round" data-original-title="Down">
											<i class="material-icons">keyboard_arrow_down</i>
		                                </a>
			                        </td>
			                    </tr>
			                    {% else %}
						          <tr>
							          <td colspan="4">
								          <br>
								          <br>
								          <center><img src="{{asset("img/bg_empty.png")}}"  style="width: auto !important;" =""></center>
							              <br>
							              <br>
							          </td>
						          </tr>	
								{% endfor %}
			                </tbody>
			            </table>

			        </div>
	    		</div>

	    	</div>
	    </div>
	</div>
                            
{% endblock%}
